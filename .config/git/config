[user]
    useConfigOnly = true
    name = Michele Campeotto
    email = micampe@micampe.it

[alias]
    ci = commit
    co = checkout
    st = status --short --branch

    l = log --pretty=color
    g = log --graph --all --pretty=color
    head = log -n1
    last = log --pretty=color ORIG_HEAD..
    reset-date = !git commit --amend --date=\"$(date)\"
    ancestor = merge-base HEAD master
    amend = commit --amend

    branches = branch -a
    tags = tag
    stashes = stash list
    remotes = remote -v

    unstage = reset HEAD              # remove files from index (tracking)
    uncommit = reset --soft HEAD^     # go back before last commit, with files in uncommitted state
    discard = checkout --

    browse = "!open $(git remote get-url origin | sed s%git@github.com:%http://github.com/%)"

    subupdate = submodule update --init --recursive

[pretty]
    color = "format:%Cred%h%C(yellow)%d %Cblue%an %Cgreen%cr%Creset %s"

[core]
    pager = diff-so-fancy | less --tabs=4 -RFX
    # this is a workaround for git-fuzzy
    editor = vim < /dev/tty

[commit]
    verbose = true

[diff]
    algorithm = histogram
    colorMoved = default
    colorMovedWS = allow-indentation-change

[credential]
    helper = osxkeychain

[branch]
    autoSetupRebase = always

[rerere]
    enabled = true
    autoUpdate = true

[status]
    submoduleSummary = true

[submodule]
    recurse = true

[merge]
    conflictstyle = zdiff3

[rebase]
    autoStash = true
    autoSquash = true

[diff "plist"]
    textconv = plutil -convert xml1 -o -

[interactive]
    diffFilter = diff-so-fancy --patch

[color "diff-highlight"]
    oldNormal = 160
    oldHighlight = 196 52
    newNormal = 40
    newHighlight = 40 22

[color "diff"]
    meta = yellow
    frag = 169 bold
    commit = yellow bold
    old = 160
    new = 40
    whitespace = 160
